<%= include('entity-management') %>

<!-- Renders the element description -->

<script type="text/tmpl" id="elements_title">
  <h2 class="entity-title"><%=t.integration_error.title%></h2>
</script>

<script type="text/tmpl" id="elements_description">
    <%= t.integration_error.description %>
</script>

<!-- Renders the elements container -->
<script type="text/tmpl" id="elements_container_template">

  <table id="elements_table" class="table">
     <thead class="table-header">
       <tr>
         <th class="table-header-title" scope="col" style="width:10%"><%= t.integration_error.table.date %></th>
         <th class="table-header-title" scope="col" style="width:10%"><%= t.integration_error.table.source_system %></th>
         <th class="table-header-title" scope="col" style="width:10%"><%= t.integration_error.table.source_entity %></th>
         <th class="table-header-title" scope="col" style="width:10%"><%= t.integration_error.table.source_id %></th>
         <th class="table-header-title" scope="col" style="width:10%"><%= t.integration_error.table.destination_system %></th>
         <th class="table-header-title" scope="col" style="width:10%"><%= t.integration_error.table.destination_entity %></th>
         <th class="table-header-title" scope="col" style="width:30%"><%= t.integration_error.table.message_error %></th>
         <th class="table-header-title" scope="col" style="width:10%"></th>
       </tr>
     </thead>
     <tbody id="elements_tbody" class="table-tbody">             
     </tbody>
  </table>

</script>

<!-- Renders one element in the elements list view -->
        
<script type="text/tmpl" id="elements_list_template">

    <tr class="table-row" rel="<%%= index %>" id="element_row_<%%=index%>">
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.creation_date.toString('yyyy-MM-dd HH:mm') %></td>
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.source_system %></td>
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.source_entity %></td>
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.source_id %></td>
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.destination_system %></td>
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.destination_entity %></td>
      <td class="table-cell element-navigation-detail" rel="<%%= index %>"><%%= entity.message %></td>      
      <td class="table-cell"></td>    
    </tr>

</script>

<!-- Renders one element in the element view (full detailed) -->

<script type="text/tmpl" id="element_template">


</script>

<!-- Renders the form to edit an element -->

<script type="text/tmpl" id="element_template_form">
              
     <form name="element" id="integration_error_form">
        
        <div class="form-fields">
        
          <div class="grid_6">
            <div class="formrow">
              <label for="name" class="fieldtitle"><%= t.integration_error.form.source_system.label %></label>
              <input type="text" maxlength="80" id="source_system" name="source_system" class="fieldcontrol" readonly="readonly" <%% if (entity) { %> value="<%%= entity.source_system %>" <%% } %> />
            </div>
            <div class="formrow">
              <label for="name" class="fieldtitle"><%= t.integration_error.form.source_entity.label %></label>
              <input type="text" maxlength="80" id="source_entity" name="source_entity" class="fieldcontrol" readonly="readonly" <%% if (entity) { %> value="<%%= entity.source_entity %>" <%% } %> />
            </div>
            <div class="formrow">
              <label for="name" class="fieldtitle"><%= t.integration_error.form.source_id.label %></label>
              <input type="text" maxlength="80" id="source_id" name="source_id" class="fieldcontrol" readonly="readonly"  <%% if (entity) { %> value="<%%= entity.source_id %>" <%% } %> />
            </div>                        
          </div>

          <div class="grid_6">
            <div class="left-margin">
              <div class="formrow">
                <label for="name" class="fieldtitle"><%= t.integration_error.form.destination_system.label %></label>
                <input type="text" maxlength="80" id="destination_system" name="destination_system" readonly="readonly"  class="fieldcontrol" <%% if (entity) { %> value="<%%= entity.destination_system %>" <%% } %> />
              </div>
              <div class="formrow">
                <label for="name" class="fieldtitle"><%= t.integration_error.form.destination_entity.label %></label>
                <input type="text" maxlength="80" id="destination_entity" name="destination_entity" readonly="readonly"  class="fieldcontrol" <%% if (entity) { %> value="<%%= entity.destination_entity %>" <%% } %> />
              </div>
              <div class="formrow">
                <label for="name" class="fieldtitle"><%= t.integration_error.form.message_error.label %></label>
                <textarea type="text" maxlength="80" id="message_error" name="message_error" class="fieldcontrol" readonly="readonly"><%% if (entity) { %><%%= entity.message %><%% } %></textarea>
              </div>   
            </div>                     
          </div>

        </div>
        
     
     </form>
     

</script>
